<Window x:Class="MazeResearcherWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeResearcherWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650">
    <Grid HorizontalAlignment="Left" Width="792">
        <Slider x:Name="rowSlider" HorizontalAlignment="Left" Margin="154,14,0,0" VerticalAlignment="Top" Width="465" Minimum="1" Maximum="100" Value="30"/>
        <Label Content="Высота (строк)" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Ширина (столбцов)" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="columnSlider" HorizontalAlignment="Left" Margin="154,54,0,0" VerticalAlignment="Top" Width="465" Minimum="1" Maximum="100" Value="30"/>
        <Image x:Name="mazeImage" HorizontalAlignment="Left" Height="240" Margin="10,154,0,0" VerticalAlignment="Top" Width="609"/>
        <Button x:Name="createButton" Content="Создать" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" Width="75" Click="CreateMaze"/>
    </Grid>
</Window>
